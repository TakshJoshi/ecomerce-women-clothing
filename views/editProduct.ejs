<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <!-- Add any required CSS -->
</head>
<body>
    <h1>Edit Product</h1>
    <form action="/products/<%= product._id %>?_method=PUT" method="POST">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" required><br>

        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <% categories.forEach(category => { %>
                <option value="<%= category._id %>" <%= product.category._id == category._id ? 'selected' : '' %>><%= category.name %></option>
            <% }) %>
        </select><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= product.description %></textarea><br>

        <button type="submit">Update Product</button>
    </form>
    <a href="/products/list">Back to Product List</a>
</body>
</html>

